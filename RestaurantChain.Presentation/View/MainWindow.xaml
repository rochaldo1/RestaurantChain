<Window x:Class="RestaurantChain.Presentation.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantChain.Presentation.View"
        mc:Ignorable="d"
        Title="Сеть ресторанов" Height="450" Width="800">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="File">
                <Button Content="Exit" />
            </MenuItem>
            <MenuItem Header="Настройки" x:Name="Settings">
                <Button Content="Изменить пароль" x:Name="ChangePassword" Click="ChangePassword_Click"/>
            </MenuItem>
            <MenuItem Header="Справка" x:Name="Help">
                <Button Content="Содержание" x:Name="Content"/>
                <Button Content="О программе" x:Name="AboutProgram" Click="AboutProgram_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
